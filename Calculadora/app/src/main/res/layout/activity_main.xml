                        android:id="@+id/spnLongitudDe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:layout_marginLeft="80dp"
                        android:entries="@array/spnLongitud"
                        />
