<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.Registrarse"
    >
    <ImageView
        android:id="@+id/titulo"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/titulo"
        android:backgroundTint="@color/DarkBlue"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Ingresa tus datos para registrarte"
        android:textColor="@color/DarkBlue"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <View
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/cuadro_redondeado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:elevation="2dp"
        />
    <ImageView
        android:id="@+id/icUsuario"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_persona"
        android:layout_marginTop="200dp"
        android:elevation="3dp"
        />
    <RelativeLayout
        android:id="@+id/lyRegistrarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/cuadro_redondeado"
        >
        <ImageView
            android:id="@+id/ic_nombres"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_usuario"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="24dp"
            android:elevation="2dp"
            />
    <EditText
        android:id="@+id/txtNombres"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Nombres"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        android:background="@drawable/fondo_redondo"
        android:textSize="18dp"/>
        <ImageView
            android:id="@+id/ic_apellidos"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_usuario"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:elevation="2dp"
            android:layout_below="@id/txtNombres"
            />
/>

    <EditText
        android:id="@+id/txtApellidos"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Apellidos"
        android:layout_below="@id/txtNombres"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        android:background="@drawable/fondo_redondo"
        android:textSize="18dp"/>
        <ImageView
            android:id="@+id/ic_correo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_correo"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:elevation="2dp"
            android:layout_below="@id/txtApellidos"
            />
    <EditText
        android:id="@+id/txtCorreoReg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Correo electrónico"
        android:layout_below="@id/txtApellidos"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textEmailAddress"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        android:background="@drawable/fondo_redondo"
        android:textSize="18dp"
        />
        <ImageView
            android:id="@+id/ic_telefono"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_telefono"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:elevation="2dp"
            android:layout_below="@id/txtCorreoReg"

            />
    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Teléfono"
        android:layout_below="@id/txtCorreoReg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        android:background="@drawable/fondo_redondo"
        android:textSize="18dp"
        android:inputType="phone"
        />

        <ImageView
            android:id="@+id/ic_direccion"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_ubicacion"
            android:backgroundTint="@color/DarkBlue"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:elevation="2dp"
            android:layout_below="@id/txtTelefono"
            />
    <EditText
        android:id="@+id/txtDireccion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Dirección"
        android:layout_below="@id/txtTelefono"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        android:background="@drawable/fondo_redondo"
        android:textSize="18dp"/>
        <ImageView
            android:id="@+id/ic_clave"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_clave"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:elevation="2dp"
            android:layout_below="@id/txtDireccion"
            />
    <EditText
        android:id="@+id/txtContraseñaReg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Contraseña"
        android:layout_below="@id/txtDireccion"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPassword"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        android:background="@drawable/fondo_redondo"
        android:textSize="18dp"
        />
        <ImageView
            android:id="@+id/ic_confirmarClave"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/ic_clave"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="24dp"
            android:elevation="2dp"
            android:layout_below="@id/txtContraseñaReg"
            />
    <EditText
        android:id="@+id/txtConfirmarContraseña"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Confirmar contraseña"
        android:layout_below="@id/txtContraseñaReg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPassword"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        android:background="@drawable/fondo_redondo"
        android:textSize="18dp"
        />

        <Button
            android:id="@+id/btnRegistrarse"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtConfirmarContraseña"
            android:layout_marginTop="20dp"
android:layout_centerHorizontal="true"
            android:text="Registrarse"
            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            android:textColor="@color/DarkBlue"
            android:backgroundTint="@color/LightBlue"

            />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pbRegistrarse"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>



</RelativeLayout>