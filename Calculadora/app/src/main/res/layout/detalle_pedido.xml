<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetallePedido">
    <View
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@color/LightLightBlue"
        />
    <ImageView
        android:id="@+id/titulo"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/titulo"
        android:backgroundTint="@color/DarkBlue"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/logo" />
    <ImageButton
        android:id="@+id/btnRegresar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/titulo"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_regresar"
        android:backgroundTint="@color/DarkBlue"
/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/btnRegresar"
        android:layout_below="@id/titulo"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/DarkBlue"
        android:text="Mi pedido"
        />
    <TextView
        android:id="@+id/tvFechaPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha del pedido: 25/04/24"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_below="@id/btnRegresar"
        android:layout_marginTop="20dp"

        />
    <TextView
        android:id="@+id/tvFechaEntrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Fecha entrega: -"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:layout_below="@id/tvFechaPedido"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Direccion de entrega"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:layout_below="@id/tvFechaPedido"
        />    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
    android:layout_marginRight="10dp"
    android:layout_centerHorizontal="true"
        android:text="1a Calle Ote. Colonia Las Flores, Jiquilisco"
        android:textSize="15dp"
        android:textColor="@color/DarkBlue"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:layout_below="@id/tvFechaPedido"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="3dp"
    android:paddingBottom="3dp"
    android:background="@drawable/cuadro_redondeado"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    />

    <View
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cuadro_redondeado"
        android:backgroundTint="@color/LightBlue"
        android:layout_marginBottom="5dp"
        />
    <ImageButton
        android:id="@+id/btnPrincipal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/ic_inicio"
        android:elevation="4dp"
        android:backgroundTint="@color/DarkBlue"
        />

    <ImageButton
        android:id="@+id/btnChat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/ic_mensajes"
        android:elevation="4dp"
        android:backgroundTint="@color/DarkBlue"
        />
    <ImageButton
        android:id="@+id/btnCarrito"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/ic_carrito"
        android:elevation="4dp"
        android:backgroundTint="@color/DarkBlue"
        />
</RelativeLayout>