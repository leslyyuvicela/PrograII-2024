        /> <ImageButton
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:background="@drawable/ic_basurero"
        android:layout_below="@id/tvFechaPedido"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="152dp"
        android:backgroundTint="@color/Red"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnPrincipal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/LightBlue"
        android:text="Cancelar pedido"
        android:textColor="@color/DarkBlue" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnPrincipal"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/LightBlue"
        android:text="Realizar pedido"
        android:textColor="@color/DarkBlue" />


    <View
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/cuadro_redondeado"
        android:backgroundTint="@color/LightBlue" />

    <ImageButton
        android:id="@+id/btnPrincipal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_inicio"
        android:backgroundTint="@color/DarkBlue"
        android:elevation="4dp" />

    <ImageButton
        android:id="@+id/btnChat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_mensajes"
        android:backgroundTint="@color/DarkBlue"
        android:elevation="4dp" />

    <ImageButton
        android:id="@+id/btnCarrito"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ic_carrito"
        android:backgroundTint="@color/DarkBlue"
        android:elevation="4dp" />
