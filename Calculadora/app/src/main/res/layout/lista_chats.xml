<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.ListaChats">
    <View
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@color/LightLightBlue"
        />

    <ImageView
        android:id="@+id/titulo"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/titulo"
        android:backgroundTint="@color/DarkBlue"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="17dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/tvMensajes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Mensajes de los clientes"
        android:textSize="20dp"
        android:textColor="@color/DarkBlue"
        android:textStyle="bold"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMensajes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMensajes"
        android:layout_above="@id/btnPrincipal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        tools:listitem="@layout/vista_chats"
        />

    <View
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/cuadro_redondeado"
        android:backgroundTint="@color/LightBlue"
        />
    <ImageButton
        android:id="@+id/btnPrincipal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="50dp"
        android:background="@drawable/ic_inicio"
        android:elevation="4dp"
        android:backgroundTint="@color/DarkBlue"
        />

    <ImageButton
        android:id="@+id/btnChat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/ic_mensajes"
        android:elevation="4dp"
        android:backgroundTint="@color/DarkBlue"
        />
    <ImageButton
        android:id="@+id/btnCarrito"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/ic_carrito"
        android:elevation="4dp"
        android:backgroundTint="@color/DarkBlue"
        />

</RelativeLayout>