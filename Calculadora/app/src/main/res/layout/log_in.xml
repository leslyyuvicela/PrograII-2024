<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actividades.LogIn">

    <ImageView
        android:id="@+id/titulo"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/titulo"
        android:backgroundTint="@color/DarkBlue"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Ingresa tus datos para iniciar sesion"
        android:textColor="@color/DarkBlue"
        android:textStyle="bold"
        android:textSize="20dp"
        />
<View
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:backgroundTint="@color/white"
    android:background="@drawable/cuadro_redondeado"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="210dp"
    android:elevation="2dp"
    />
    <ImageView
        android:id="@+id/icUsuario"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_persona"
        android:layout_marginTop="200dp"
        android:elevation="3dp"
        />
<RelativeLayout
    android:id="@+id/lyLogIn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
android:layout_marginLeft="20dp"
android:layout_marginRight="20dp"
    android:layout_marginTop="240dp"
    android:background="@drawable/cuadro_redondeado"
    >

    <ImageView
        android:id="@+id/ic_correo"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/ic_correo"
        android:layout_marginTop="56dp"
        android:layout_marginLeft="24dp"
        android:elevation="2dp"
        />
    <EditText
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:id="@+id/txtCorreoLog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textEmailAddress"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        android:background="@drawable/fondo_redondo"
        android:textSize="18dp"
android:hint="Correo"
        />
    <ImageView
        android:id="@+id/ic_contraseña"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/ic_clave"
        android:layout_below="@id/txtCorreoLog"
        android:layout_marginLeft="24dp"
        android:elevation="2dp"
        android:layout_marginTop="32dp"
        />

    <EditText
        android:id="@+id/txtContraseñaLog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/txtCorreoLog"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="textPassword"
        android:background="@drawable/fondo_redondo"
        android:paddingLeft="50dp"
        android:paddingRight="10dp"
        style="@style/FirebaseUI.AuthMethodPicker"
        android:textSize="18dp"
        android:hint="Contraseña"
        />

    <Button
        android:id="@+id/btnIngresar"
        android:text="Iniciar sesión"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtContraseñaLog"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="@color/DarkBlue"
        android:backgroundTint="@color/LightBlue"
        />
</RelativeLayout>

    <TextView
        android:id="@+id/lblRegistrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="75dp"
        android:text="¿No tienes una cuenta?"
        android:layout_below="@id/lyLogIn"
        android:textColor="@color/DarkBlue"
        android:textSize="17dp"

        />

    <TextView
        android:id="@+id/btnRegistrarse"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/lyLogIn"
        android:layout_toRightOf="@id/lblRegistrate"
        android:layout_marginTop="60dp"
        android:text="Registrate"
        android:textColor="@color/LightBlue"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:paddingLeft="6dp"
        android:textSize="17dp"
        />

    <ProgressBar
        android:id="@+id/pbLogIn"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />

</RelativeLayout>