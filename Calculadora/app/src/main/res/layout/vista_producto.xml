<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="205dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="Nombre"
        android:textSize="15dp"
        android:layout_below="@+id/cvFoto"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="$00.00"
        android:textSize="20dp"
        android:layout_below="@+id/lblNombre"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/lblPrecioAnterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$00.00"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="15dp"
        android:textSize="12dp"
        android:layout_below="@id/lblPrecio"
        />

    <RelativeLayout
        android:id="@+id/cuadroDescuento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblNombre"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"

        android:background="@color/Red"
        >

        <TextView
            android:id="@+id/lblDescuento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="4dp"
            android:textSize="15dp"
            android:text="- 00%"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFoto"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/imgFoto"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

</RelativeLayout>