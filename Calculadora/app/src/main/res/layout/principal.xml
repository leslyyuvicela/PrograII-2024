<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicio">

    <ImageView
        android:id="@+id/imgTitulo"
        android:layout_width="238dp"
        android:layout_height="40dp"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@+id/btnMenu"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_titulo" />
    <ImageButton
        android:id="@+id/btnPerfil"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:tint="@color/Red"
        android:layout_marginTop="75dp"
        android:layout_toRightOf="@+id/btnUbicacion"
        android:layout_marginLeft="10dp"
        android:scaleType="fitCenter"
        android:background="@drawable/ic_usuario_vacio"
        />

    <ImageButton
        android:id="@+id/btnUbicacion"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_toRightOf="@+id/imgTitulo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/ic_ubicacion"
        android:backgroundTint="@color/DarkBlue"
        />

    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        android:scaleType="fitCenter"
        android:background="@drawable/ic_menu" />

    <ImageButton
        android:id="@+id/btnFiltrar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/ic_filtrar"
        android:scaleType="fitCenter"
/>

    <EditText
        android:id="@+id/txtBuscar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Buscar"
        android:layout_marginTop="125dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/fondo_redondo"
        android:paddingLeft="20dp"
        android:drawableRight="@drawable/ic_buscar"

        />


    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:layout_marginTop="10dp"
    android:layout_below="@id/btnFiltrar">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vpAnuncios"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDescuentos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/vpAnuncios"
        tools:listitem="@layout/listview_imagenes"
        android:numColumns="2"
        />
</RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnAgregarProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"

        android:src="@android:drawable/ic_input_add" />

</RelativeLayout>